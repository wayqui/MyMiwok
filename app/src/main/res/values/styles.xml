<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4A312A</item>
        <item name="colorPrimaryDark">#2F1D1A</item>
        <item name="colorAccent">#FFF7DA</item>
    </style>

    <style name="MYMiwokTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="itemImage">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="itemPlayIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="itemStyleLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="itemStyleMiwok">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="itemStyleEnglish">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
